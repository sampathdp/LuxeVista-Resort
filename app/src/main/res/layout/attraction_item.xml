<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Section -->
        <ImageView
            android:id="@+id/img_attraction_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Attraction Thumbnail"
            android:src="@drawable/slider_image_1"
            android:clipToOutline="true"
            android:outlineProvider="background" />

        <!-- Text Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Attraction Name -->
            <TextView
                android:id="@+id/txt_attraction_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attraction Name"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Attraction Description -->
            <TextView
                android:id="@+id/txt_attraction_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Short description about the attraction. Ideal for tourists and visitors. Perfect for spending quality time with family and friends."
                android:textColor="#666666"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- Learn More Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_learn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingVertical="8dp"
                android:backgroundTint="#03A9F4"
                android:text="Learn More"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
