<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Service Image -->
        <ImageView
            android:id="@+id/serviceImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/slider_image_3"
            android:contentDescription="Service Image"
            android:background="@drawable/rounded_corners" />

        <!-- Availability Tag -->
        <TextView
            android:id="@+id/serviceAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Available"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/availability_tag" />

        <!-- Service Title -->
        <TextView
            android:id="@+id/serviceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Service Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Service Description -->
        <TextView
            android:id="@+id/serviceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Brief description of the service goes here."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Service Price -->
        <TextView
            android:id="@+id/servicePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Price: $99.99"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Reserve Now Button -->
        <Button
            android:id="@+id/btnReserveNow"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Reserve Now"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/primary"
            app:cornerRadius="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
