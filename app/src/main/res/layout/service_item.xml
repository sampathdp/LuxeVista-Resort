<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/serviceImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Service Image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/serviceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Title"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/serviceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Description"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/servicePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $99.99"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <!-- Availability TextView added here -->
            <TextView
                android:id="@+id/serviceAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="#FF0000"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnReserveNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserve Now"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary"
                android:layout_marginTop="8dp"
                app:cornerRadius="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
